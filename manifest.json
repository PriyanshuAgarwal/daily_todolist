{
  "manifest_version": 2,
  "name": "Day Ticker",
  "version": "1.0",
  "description": "Simple TODO list for daily tasks",

  "icons": {
    "16": "img/dayticker_16x16.png",
    "48": "img/dayticker_48x48.png",
    "128": "img/dayticker_128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "img/dayticker_16x16.png"
    },
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "storage"
  ]
}